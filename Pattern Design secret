#include <stdio.h>
#include <stdlib.h>


///pattern programming is basically composition of right angles & straight lines
///when u understand this trick, you're on the way mate!!

int main()
{

//printing a right angle triangle

int n;
printf("Input n (Inverted Right Angle)\n");
scanf("%d",&n);

///drawing inverted right angle

/*
       *
     * *
   * * *
 * * * *

 */


 for (int i =1;i<=n;i++)
 {

     //space
     for (int j =n; j>i;j--)
     {
         printf("_ ");
     }

     for (int x = 1;x<=i;x++)
        printf("* ");

     printf("\n");
 }


 printf("\n\nA Straight Line\n");

 for (int i =1; i<=n;i++)
 {
     for (int j = 1; j<= n;j++)
        printf("* ");

     printf("\n");
 }






}
